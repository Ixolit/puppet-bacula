<%
  |
    String $device_name,
    String $media_type,
    String $device,
    Bacula::Yesno $label_media,
    Bacula::Yesno $random_access,
    Bacula::Yesno $automatic_mount,
    Bacula::Yesno $removable_media,
    Bacula::Yesno $always_open,
    Integer $maxconcurjobs,
  |
-%>
Device {
    Name           = <%= $device_name %>
    Media Type     = <%= $media_type %>
    Archive Device = <%= $device %>
    LabelMedia     = <%= $label_media %>; # lets Bacula label unlabeled media
    Random Access  = <%= $random_access %>;
    AutomaticMount = <%= $automatic_mount %>;
    RemovableMedia = <%= $removable_media %>;
    AlwaysOpen     = <%= $always_open %>;
    Maximum Concurrent Jobs = <%= $maxconcurjobs %>
}
